[MASTER]
# Disable import-error since dependencies may not be installed in CI
disable=import-error

[MESSAGES CONTROL]
# Disable checks that are acceptable for CLI applications
disable=duplicate-code,
        too-many-positional-arguments,
        broad-exception-caught

[DESIGN]
# Increase thresholds for complexity checks to accommodate existing code
max-args=7
max-locals=23
max-branches=18
max-statements=68

[FORMAT]
max-line-length=100
